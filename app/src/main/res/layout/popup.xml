<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardBackgroundColor="#D5243070">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="@string/heading"
                android:textColor="#F5070F"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="casual">

            </TextView>

            <EditText
                android:id="@+id/title_popup_id"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/heading"
                android:hint="Title"
                android:inputType="text"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColorHint="#FFFF4081" />

            <EditText
                android:id="@+id/status_popup_id"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_popup_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:hint="Status(e.g. complete or pending)"
                android:textColor="#000000"
                android:textStyle="bold"
                android:inputType="text"
                android:textAlignment="center"
                android:textColorHint="#FF4081" />


            <Button
                android:id="@+id/save_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="39dp"
                android:layout_centerHorizontal="true"
                android:background="#FF448AFF"
                android:shadowColor="#ED130A0A"
                android:text="Save"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/des_popup_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_above="@id/save_id"
                android:layout_below="@id/status_popup_id"
                android:hint="Description (Optional)"
                android:inputType="text"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColorHint="#FFFF4081" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>